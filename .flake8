[flake8]
max-line-length = 127
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info
# E226: missing whitespace around arithmetic operator (intentional for separator lines like "=" * 70)
# E722: bare except used for robust error handling in mathematical code
# F401: some imports used implicitly or for backward compatibility
# F841: some variables used for debugging or future use
# W504: line break after binary operator (acceptable style)
ignore = E226,E722,F841,W504
per-file-ignores =
    # E402: module level import not at top of file (needed for sys.path modification)
    examples/quick_demo.py:E402
    tests/test_finiteness.py:E402
    scripts/generate_all_certificates.py:E402
    scripts/generate_final_certificates.py:E402,F401
    scripts/run_complete_verification.py:E402
    tests/test_advanced_modules.py:E402
    tests/test_certificate_generation.py:E402
    tests/test_integration_advanced.py:E402
    tests/test_lmfdb_crosscheck.py:E402
    tests/test_selmer_verification.py:E402,F401
    tests/test_spectral_core.py:E402
    tests/test_spectral_cycles.py:E402
    tests/test_spectral_selmer_map.py:E402,F401
    # F401: imports used for compatibility or testing
    src/adelic_operator.py:F401
    src/cohomology/*.py:F401
    src/heights/*.py:F401
    src/height_pairing.py:F401
    src/local_factors.py:F401
    src/spectral_bsd.py:F401
    src/spectral_cycles.py:F401
    src/vacuum_energy.py:F401
    src/verification/*.py:F401
    tests/conftest.py:F401
